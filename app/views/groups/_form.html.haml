- if @group.errors.any?
  .chat-group-form__errors
    %h2
      = pluralize(@group.errors.count, "error")
      prohibited this post from being saved:
    %ul
      - if @group.group_name.empty?
        %li グループ名を入力してください
      - if @group.user_ids.empty?
        %li 最低1名選択してください
= form_for @group, html: {class: "new_chat_group", id: "new_chat_group"} do |f|
  .chat-group-form__field.clearfix
    .chat-group-form__field--left
      = f.label :group_name, "グループ名"
    .chat-group-form__field--right
      = f.text_field :group_name, placeholder: "グループ名を入力してください", class: "chat-group-form__field--right__name"
  .chat-group-form__field.clearfix
    .chat-group-form__field--left
      = f.label :name, "チャットメンバー"
    .chat-group-form__field--right
      = f.collection_check_boxes(:user_ids, User.all, :id, :name) do |b|
        = b.label { b.check_box + b.text }
  .chat-group-form__field.clearfix
    .chat-group-form__field--left
    .chat-group-form__field--right
      = f.submit "Save", class: "chat-group-form__action-btn", data:{disable_with: "Save"}
